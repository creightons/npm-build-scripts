{
  "name": "build-with-npm-scripts",
  "version": "1.0.0",
  "description": "Running a build process with npm scripts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-js": "browserify  -t [ babelify --presets [ es2015 ] ] ./src/index.js > dist/build.js",
	"watch-js": "watchify  -dv -t [ babelify --presets [ es2015 ] ] ./src/index.js -o dist/build.js",
    "build-css": "node-sass ./scss/index.scss ./dist/style.css",
	"watch-css": "npm run build-css && npm run build-css -- -w",
	"watch": "npm run watch-css && npm run watch-js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "node-sass": "^4.5.0",
    "watchify": "^3.9.0"
  }
}
